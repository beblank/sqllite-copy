<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.journaldev.sqlite.ReturnOrderActivity">

    <TextView
        android:id="@+id/return_order_item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="3dp"
        android:paddingTop="10dp"
        android:textSize="8pt"/>

    <EditText
        android:id="@+id/return_order_qty_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Update Amount"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_order_button"
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/update_order_button"
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>
